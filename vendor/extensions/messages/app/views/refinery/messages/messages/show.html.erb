<% content_for :body_content_title do %>
  <%= @message.name %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Name</h1>
    <p>
      <%=raw @message.name %>
    </p>
  </section>
  <section>
    <h1>Email</h1>
    <p>
      <%=raw @message.email %>
    </p>
  </section>
  <section>
    <h1>Content</h1>
    <p>
      <%=raw @message.content %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="messages">
      <% @messages.each do |message| %>
        <li>
          <%= link_to message.name, refinery.messages_message_path(message) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
