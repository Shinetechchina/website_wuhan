<% content_for :body_content_title do %>
  <%= @staff.name %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Name</h1>
    <p>
      <%=raw @staff.name %>
    </p>
  </section>
  <section>
    <h1>Email</h1>
    <p>
      <%=raw @staff.email %>
    </p>
  </section>
  <section>
    <h1>Number</h1>
    <p>
      <%=raw @staff.number %>
    </p>
  </section>
  <section>
    <h1>Title</h1>
    <p>
      <%=raw @staff.title %>
    </p>
  </section>
  <section>
    <h1>Image</h1>
    <p>
      <%= image_fu @staff.image, nil %>
    </p>
  </section>
  <section>
    <h1>Description</h1>
    <p>
      <%=raw @staff.description %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="staffs">
      <% @staffs.each do |staff| %>
        <li>
          <%= link_to staff.name, refinery.staffs_staff_path(staff) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
