<%= form_for [refinery, :staffs_admin, @staff] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @staff,
              :include_object_name => true %>

  
  <div class='field'>
    <%= f.label :name -%>
    <%= f.text_field :name, :class => 'larger widest'  -%>

  </div>
  
  <% [:email, :github_url, :linkedin_url, :twitter_url, :weibo_url].each do |attr| %>
    <div class='field'>
      <%= f.label attr -%>
      <%= f.text_field attr -%>
    </div>
  <% end %>
  
  <div class='field'>
    <%= f.label :number -%>
    <%= f.number_field :number  -%>

  </div>
  
  <div class='field'>
    <%= f.label :title -%>
    <%= f.text_field :title  -%>

  </div>
  
  <div class='field'>
    <%= f.label :image -%>
    <%= render '/refinery/admin/image_picker',
               :f => f,
               :field => :image_id,
               :image => @staff.image,
               :toggle_image_display => false %>

  </div>

  <!--div class='field'>
    < %= f.label :tags -%>
    < %= f.text_field :tags, class: 'tags-input', value: @staff.tags.join(',') %>
  </div-->

  <div class='field'>
    <div id='page-tabs' class='clearfix ui-tabs ui-widget ui-widget-content ui-corner-all'>
      <ul id='page_parts'>
        <% [:description].each_with_index do |part, part_index| %>
          <li class='ui-state-default<%= ' ui-state-active' if part_index == 0 %>'>
            <%= link_to t("#{part}", :scope => "activerecord.attributes.refinery/staffs/staff", :default => part.to_s.titleize), "##{part}" %>
          </li>
        <% end %>
      </ul>
      <div id='page_part_editors'>
        <% [:description].each do |part| %>
          <div class='page_part' id='<%= part %>'>
            <%= f.text_area part, :rows => 20, :class => 'wymeditor widest' -%>
          </div>
        <% end %>
      </div>
    </div>

  </div>
  
  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.staffs.admin.staffs.staff'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @staff.name) %>
<% content_for :javascripts do %>
<% end -%>
  <script>
    $(document).ready(function(){
      page_options.init(false, '', '');
    });
  </script>
<% end %>
