<% content_for :body_content_title do %>
  <%= @client.name %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Name</h1>
    <p>
      <%=raw @client.name %>
    </p>
  </section>
  <section>
    <h1>Description</h1>
    <p>
      <%=raw @client.description %>
    </p>
  </section>
  <section>
    <h1>Logo</h1>
    <p>
      <%= image_fu @client.logo, nil %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="clients">
      <% @clients.each do |client| %>
        <li>
          <%= link_to client.name, refinery.shinetech_client_path(client) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
