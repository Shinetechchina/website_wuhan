<% @clients.each do |client| %>
  <div class="box box-client box-expandable <%= 'box-expanded' if params[:id] == client.id.to_s %>" <%= "data-ss-colspan=4" if params[:id] == client.id.to_s %> data-id="<%= client.id %>" data-expand-cols="4">
    <div class="mini">
      <a class="route" href="/clients/<%= client.id %>">
        <div class="client-logo">
          <%= image_tag client.logo.url %>
        </div>
      </a>
    </div>
    <div class="maxi">
      <div class="client-content">
        <h1><%= client.name %></h1>
        <div class="description">
          <%= client.description.html_safe %>
        </div>
        <% if client.comment? and client.commenter? %>
          <div class="comment">
            " <%= client.comment %> "
          </div>
          <div class="commenter">
            <%= client.commenter %>
          </div>
        <% end %>
      </div>
      <div class="client-aside">
        <div class="client-logo">
          <%= image_tag client.logo.url %>
        </div>
      </div>
    </div>
  </div>
<% end %>
