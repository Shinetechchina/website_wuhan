<ul>
  <% if ::Refinery::Shinetech::Admin::ClientsController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.shinetech_admin_clients_path %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), refinery.new_shinetech_admin_client_path,
                 :class => "add_icon" %>
  </li>
<% if !searching? && ::Refinery::Shinetech::Admin::ClientsController.sortable? && ::Refinery::Shinetech::Client.any? %>
  <li>
    <%= link_to t('.reorder', :what => "Clients"),
                 refinery.shinetech_admin_clients_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Clients"),
                 refinery.shinetech_admin_clients_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>
