<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(custom) -%>">
  <span class='title'>
    <%= custom.title %>

  </span>
  <span class='actions'>
    
    <%= link_to refinery_icon_tag("application_go.png"), refinery.customs_custom_path(custom),
        :title => t('.view_live_html'),
        :target => "_blank" %>
    
    <%= link_to refinery_icon_tag("application_edit.png"), refinery.edit_customs_admin_custom_path(custom),
         :title => t('.edit') %>
    <%= link_to refinery_icon_tag("delete.png"), refinery.customs_admin_custom_path(custom),
        :class => "cancel confirm-delete",
        :title => t('.delete'),
        :confirm => t('message', :scope => 'refinery.admin.delete', :title => custom.title),
        :method => :delete %>
  </span>
</li>
