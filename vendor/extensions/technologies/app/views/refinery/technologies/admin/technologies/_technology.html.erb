<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(technology) -%>">
  <span class='title'>
    <%= technology.title %>

  </span>
  <span class='actions'>
    
    <%#= link_to refinery_icon_tag("application_go.png"), refinery.technologies_technology_path(technology),
        :title => t('.view_live_html'),
        :target => "_blank" %>
    
    <%= link_to refinery_icon_tag("application_edit.png"), refinery.edit_technologies_admin_technology_path(technology),
         :title => t('.edit') %>
    <%= link_to refinery_icon_tag("delete.png"), refinery.technologies_admin_technology_path(technology),
        :class => "cancel confirm-delete",
        :title => t('.delete'),
        :confirm => t('message', :scope => 'refinery.admin.delete', :title => technology.title),
        :method => :delete %>
  </span>
</li>
