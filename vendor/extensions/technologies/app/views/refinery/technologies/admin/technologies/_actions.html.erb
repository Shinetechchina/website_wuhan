<ul>
  <% if ::Refinery::Technologies::Admin::TechnologiesController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.technologies_admin_technologies_path %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), refinery.new_technologies_admin_technology_path,
                 :class => "add_icon" %>
  </li>
<% if !searching? && ::Refinery::Technologies::Admin::TechnologiesController.sortable? && ::Refinery::Technologies::Technology.any? %>
  <li>
    <%= link_to t('.reorder', :what => "Technologies"),
                 refinery.technologies_admin_technologies_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Technologies"),
                 refinery.technologies_admin_technologies_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>
