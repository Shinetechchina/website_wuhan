<% content_for :body_content_title do %>
  <%= @technology.title %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Title</h1>
    <p>
      <%=raw @technology.title %>
    </p>
  </section>
  <section>
    <h1>Image</h1>
    <p>
      <%= image_fu @technology.image, nil %>
    </p>
  </section>
  <section>
    <h1>Description</h1>
    <p>
      <%=raw @technology.description %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="technologies">
      <% @technologies.each do |technology| %>
        <li>
          <%= link_to technology.title, refinery.technologies_technology_path(technology) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
