$('#linkModal .modal-header h3').html('<%= j @modal.title %>');
$('#linkModal .modal-body').html('<%= j raw @modal.content %>');
$('#linkModal').css('width', '<%= "#{@modal.width}px" %>')
$('#linkModal').css('height', '<%= "#{@modal.height}px" if (!@modal.height.nil? and @modal.height > 200) %>')
$('#linkModal').css('margin-left', '<%= "-#{@modal.width.to_i/2}px" %>')
