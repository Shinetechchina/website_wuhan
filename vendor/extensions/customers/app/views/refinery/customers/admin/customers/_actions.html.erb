<ul>
  <% if ::Refinery::Customers::Admin::CustomersController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.customers_admin_customers_path %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), refinery.new_customers_admin_customer_path,
                 :class => "add_icon" %>
  </li>
<% if !searching? && ::Refinery::Customers::Admin::CustomersController.sortable? && ::Refinery::Customers::Customer.any? %>
  <li>
    <%= link_to t('.reorder', :what => "Customers"),
                 refinery.customers_admin_customers_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Customers"),
                 refinery.customers_admin_customers_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>
