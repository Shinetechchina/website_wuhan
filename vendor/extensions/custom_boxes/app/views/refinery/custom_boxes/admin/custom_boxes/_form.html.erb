<%= form_for [refinery, :custom_boxes_admin, @custom_box] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @custom_box,
              :include_object_name => true %>

  
  <div class='field'>
    <%= f.label :title -%>
    <%= f.text_field :title, :class => 'larger widest'  -%>

  </div>
  
  <br>

  <div class='field'>
    <%= f.label :width, style: 'display: inline;' -%>
    <%= f.select :width, [1,2,3,4]  -%>
  </div>

  <br>
  
  <div class='field'>
    <%= f.label :height, style: 'display: inline;' -%>
    <%= f.select :height, [1,2,3,4]  -%>
  </div>
  
  <br>

  <div class='field'>
    <div id='page-tabs' class='clearfix ui-tabs ui-widget ui-widget-content ui-corner-all'>
      <ul id='page_parts'>
        <% [:content].each_with_index do |part, part_index| %>
          <li class='ui-state-default<%= ' ui-state-active' if part_index == 0 %>'>
            <%= link_to t("#{part}", :scope => "activerecord.attributes.refinery/custom_boxes/custom_box", :default => part.to_s.titleize), "##{part}" %>
          </li>
        <% end %>
      </ul>
      <div id='page_part_editors'>
        <% [:content].each do |part| %>
          <div class='page_part' id='<%= part %>'>
            <%= f.text_area part, :rows => 20, :class => 'wymeditor widest' -%>
          </div>
        <% end %>
      </div>
    </div>

  </div>
  
  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.custom_boxes.admin.custom_boxes.custom_box'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @custom_box.title) %>
<% end -%>
<% content_for :javascripts do %>
  <script>
    $(document).ready(function(){
      page_options.init(false, '', '');
    });
  </script>
<% end %>
