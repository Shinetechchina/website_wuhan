<% content_for :body_content_title do %>
  <%= @custom_box.title %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Title</h1>
    <p>
      <%=raw @custom_box.title %>
    </p>
  </section>
  <section>
    <h1>Width</h1>
    <p>
      <%=raw @custom_box.width %>
    </p>
  </section>
  <section>
    <h1>Height</h1>
    <p>
      <%=raw @custom_box.height %>
    </p>
  </section>
  <section>
    <h1>Content</h1>
    <p>
      <%=raw @custom_box.content %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="custom_boxes">
      <% @custom_boxes.each do |custom_box| %>
        <li>
          <%= link_to custom_box.title, refinery.custom_boxes_custom_box_path(custom_box) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
