<div class="box box-title" style="background-color: rgb(238, 95, 91)">
  <h2>Who we work with:</h2>
</div>
<% @customers.each do |customer| %>
  <div class="box" style="background-image: url('<%= customer.image.url %>'); background-position: center;" onclick="location = '/clients'"></div>
<% end %>
<%= fill_with_boxes 3 - @customers.size if @customers.size < 3 %>

<div class="box box-title" style="background-color: rgb(248, 148, 6)">
  <h2>How we work:</h2>
</div>
<div class="box" style="background-image:url('/assets/programming-practices.png'); background-size: 370px;"></div>
<div class="box" style="background-image:url('/assets/delivery.png'); background-size: 370px;"></div>
<div class="box" style="background-image:url('/assets/consulting.png'); background-size: 370px;"></div>

<div class="box box-title" style="background-color: rgb(81, 163, 81)">
  <h2>What technology we use:</h2>
</div>
<% for tech in @techs %>
  <div class="box box-tech">
    <img src="<%= tech.image_url %>">
    <p><%= tech.description.html_safe %></p>
  </div>
<% end %>
<%= fill_with_boxes 3 - @techs.size if @techs.size < 3 %>

<div class="box box-title" style="background-color:rgb(47, 150, 180)">
  <h2>Our staffs:</h2>
</div>
<% for staff in @staffs %>
  <div class="box box-staff box-expandable" onclick="location = '/staff'">
    <div class="mini">
      <div class="staff-thumb" style="background-image: url('<%= staff.image_url %>');">
        <div class="staff-name"><%= staff.name %></div>
      </div>
    </div>
  </div>
<% end %>
<%= fill_with_boxes 3 - @staffs.size if @staffs.size < 3 %>

