{% for s in services %}
<div class="box box-service box-expandable {% if s.expanded %}box-expanded box-2x{% endif %}" data-expanded-class="box-2x">
  <div class="mini">
    <div class="box-hover-content" style="border-color: {{ s.color }}"></div>
    <i class="icon icon-{{ s.icon }}" style="color: {{ s.color }}"></i>
    <h3 style="color: {{ s.color }}">{{ s.title }}</h3>
    <p>{{ s.short_content }}</p>
  </div>
  <div class="maxi">
    <i class="icon icon-{{ s.icon }}" style="color: {{ s.color }}"></i>
    <h2 style="color: {{ s.color }}">{{ s.title }}</h2>
    {{ s.content }}
  </div>
</div>
{% endfor %}
